{
	"name": "personalwebsite",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"predeploy": "npm run build",
		"deploy": "echo ncp.dev > ./dist/CNAME && gh-pages -d dist",
		"dev": "vite",
		"prebuild": "replace-in-files --string='/src/main-page/index.html' --replacement='index.html' src/404-page/404.js",
		"build": "vite build",
		"postbuild": "ncp dist/src/main-page dist && ncp dist/src/404-page dist && del-cli --force dist/src && replace-in-files --string='index.html' --replacement='/src/main-page/index.html' src/404-page/404.js",
		"preview": "vite preview"
	},
	"devDependencies": {
		"del-cli": "^5.0.0",
		"gh-pages": "^4.0.0",
		"vite": "^3.2.5"
	},
	"dependencies": {
		"ncp": "^2.0.0",
		"node": "^19.0.0",
		"replace-in-file": "^6.3.5"
	}
}